<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MyBot.Supporter.V2.Models"
        xmlns:assembly="clr-namespace:System;assembly=mscorlib"
        x:Class="MyBot.Supporter.V2.SplashScreen"
        mc:Ignorable="d"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Title="Loading" 
        Height="100" 
        Width="300" 
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize" Opacity="0.95" Loaded="Window_Loaded">
    <Grid>
        <ProgressBar HorizontalAlignment="Center" Height="12" Margin="0,78,0,0" VerticalAlignment="Top" Width="280" IsIndeterminate="True"/>
        <Image x:Name="image" HorizontalAlignment="Right" Height="39" Margin="0,5,11,0" VerticalAlignment="Top" Width="278"/>
        <Label x:Name="label" Content="Please wait..." HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Height="28" Width="280"/>
    </Grid>
</Window>
